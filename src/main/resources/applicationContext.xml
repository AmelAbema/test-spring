<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>
    <bean id="musicBeanRock"
          class="com.ivan.spring.RockMusic">
    </bean>
    <bean id="musicBeanClassical"
          class="com.ivan.spring.ClassicalMusic">
    </bean>
    <bean id="musicBeanPop"
          class="com.ivan.spring.PopMusic">
    </bean>
    <bean id="musicPlayer"
          class="com.ivan.spring.MusicPlayer">
        <property name="musicList">
            <list value-type="com.ivan.spring.Music">
                <ref bean="musicBeanRock"/>
                <ref bean="musicBeanClassical"/>
                <ref bean="musicBeanPop"/>
            </list>
        </property>
        <property name="volume" value="${musicPlayer.volume}"/>
        <property name="name" value="${musicPlayer.name}"/>
    </bean>
</beans>